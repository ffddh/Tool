#[rewrite_local]
# DualSubs.TV.SUB.WebVTT
^https?:\/\/vod-(.+)-amt\.tv\.apple\.com\/itunes-assets\/(.+)\.webvtt(\?.+)?$ url script-response-body https://raw.githubusercontent.com/DualSubs/DualSubs/main/js/archive/v0.7/DualSubs.SUB.WebVTT.js

# DualSubs.TV+.SUB.WebVTT
^https?:\/\/vod-(.+)-aoc\.tv\.apple\.com\/itunes-assets\/(.+)\.webvtt(\?.+)?$ url script-response-body https://raw.githubusercontent.com/DualSubs/DualSubs/main/js/archive/v0.7/DualSubs.SUB.WebVTT.js

# DualSubs.Fitness.SUB.WebVTT
^https?:\/\/(hls|hls-svod)\.itunes\.apple\.com\/itunes-assets\/(.+)\.webvtt(\?.+)?$ url script-response-body https://raw.githubusercontent.com/DualSubs/DualSubs/main/js/archive/v0.7/DualSubs.SUB.WebVTT.js

#[mitm]
hostname = hls.itunes.apple.com, hls-svod.itunes.apple.com, vod-*.tv.apple.com
